<!--<?xml version="1.0" encoding="UTF-8"?>-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="
            http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd
            http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">
    
    
    <cache alias="findBrendaResultByEc">
        <key-type>java.lang.String</key-type>
        <value-type>uk.ac.ebi.ep.brendaservice.dto.BrendaResult</value-type>  
        <expiry>
           
            <ttl unit="hours">2</ttl>
        </expiry>

        <listeners>
            <listener>
                <class>uk.ac.ebi.ep.brendaservice.config.BrendaCacheEventListener</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <heap unit="entries">50</heap>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache>
    
    
    
    <cache alias="proteinData">
        <key-type>java.lang.String</key-type>
        <value-type>uk.ac.ebi.ep.dataservice.dto.ProteinData</value-type>  
        <expiry>
            <!--            <ttl unit="seconds">30</ttl>-->
            <ttl unit="hours">2</ttl>
        </expiry>

        <listeners>
            <listener>
                <class>uk.ac.ebi.ep.dataservice.config.DataCacheEventListener</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <heap unit="entries">50</heap>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache>

</config>